theme = xcodelight

font-family = "MonoLisa Nerd Font Mono"
font-size = 13.5

adjust-cell-height = 10%
adjust-cell-width = -10%
adjust-cursor-height = 10%

cursor-color = #a855f7 

background-opacity = 0.9
unfocused-split-opacity = 0.7
# unfocused-split-fill = #f3e8ff 

window-theme = ghostty

# Split
keybind = alt+h=new_split:left
keybind = alt+j=new_split:down
keybind = alt+k=new_split:up
keybind = alt+l=new_split:right
keybind = ctrl+alt+h=goto_split:left
keybind = ctrl+alt+j=goto_split:bottom
keybind = ctrl+alt+k=goto_split:top
keybind = ctrl+alt+l=goto_split:right

# Tab
keybind = ctrl+shift+t=new_tab
keybind = ctrl+shift+l=next_tab
keybind = ctrl+shift+h=previous_tab
keybind = ctrl+shift+1=goto_tab:1
keybind = ctrl+shift+2=goto_tab:2
keybind = ctrl+shift+3=goto_tab:3
keybind = ctrl+shift+4=goto_tab:4
keybind = ctrl+shift+5=goto_tab:5

# Resize
keybind = ctrl+alt+left=resize_split:left,10
keybind = ctrl+alt+down=resize_split:down,10
keybind = ctrl+alt+up=resize_split:up,10
keybind = ctrl+alt+right=resize_split:right,10
keybind = ctrl+alt+q=equalize_splits

# fullscreen
keybind = ctrl+alt+f=toggle_fullscreen

# quick terminal
keybind = ctrl+alt+t=toggle_quick_terminal

# Font size 
keybind = ctrl+alt+i=increase_font_size:0.5
keybind = ctrl+alt+o=reset_font_size

